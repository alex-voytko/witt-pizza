.hero-video-section video {
    width: 100%;
    height: 281px;
    object-position: center;
    object-fit: cover;
    padding: 0;
    margin: 0;
}
.hero-video-section .video-container {
    position: relative;
    width: 100%;
    height: 281px;
    padding: 0;
    margin: 0;
    box-sizing: content-box;
}
.hero-video-section .video-container::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(23, 23, 25, 0.5);
    z-index: 1;
    pointer-events: none;
}
.hero-video-section .video-control-btn {
    position: absolute;
    width: 61px;
    height: 61px;
    display: none;
    justify-content: center;
    align-items: center;
    top: 30px;
    right: 30px;
    z-index: 2;
    padding: 0;
    border-radius: 50%;
    border: 3px solid rgba(255, 255, 255, 0.5);
    background-color: transparent;
    transform: scale(0.8);
    cursor: pointer;
}
.hero-video-section .video-control-btn .icon {
    width: 19px;
    height: 28px;
}
.hero-video-section .icon path {
    fill: rgba(255, 255, 255, 0.5);
}
.hero-video-section .content-container {
    width: fit-content;
    height: fit-content;
    padding: 24px 15px 0;
}
.hero-video-section .video-container.paused .video-control-btn .icon.icon-pause,
.hero-video-section .video-control-btn .icon.icon-play {
    display: none;
}
.hero-video-section .video-container.paused .video-control-btn .icon.icon-play {
    width: 22.5px;
    display: block;
}
.hero-video-section .section-title {
    font-family: 'Oswald', sans-serif;
    font-weight: 700;
    font-size: 40px;
    text-transform: uppercase;
    margin: 0 0 32px 0;
    cursor: default;
}
.hero-video-section .btn-cta {
    width: 100%;
    display: block;
    font-family: 'Oswald', sans-serif;
    font-weight: 600;
    font-size: 20px;
    line-height: 1;
    text-decoration: none;
    text-align: center;
    padding: 24px 0 22px;
    border: none;
    border-radius: 50px;
    cursor: pointer;
}
@media screen and (min-width: 768px) {
    .hero-video-section {
        position: relative;
    }
    .hero-video-section video,
    .hero-video-section .video-container {
        height: 440px;
    }
    .hero-video-section .video-control-btn {
        display: flex;
    }
    .hero-video-section .section-title {
        max-width: 660px;
    }
    .hero-video-section .content-container {
        position: absolute;
        top: 50%;
        left: 0;
        transform: translateY(-50%);
        z-index: 2;
        padding: 0 30px;
    }
    .hero-video-section .btn-cta {
        width: 250px;
        min-width: 250px;
        max-width: 500px;
    }
}
@media screen and (min-width: 1440px) {
    .hero-video-section video,
    .hero-video-section .video-container {
        height: 555px;
    }
    .hero-video-section .content-container {
        padding: 0 48px;
    }
    .hero-video-section .section-title {
        max-width: 890px;
        font-size: 64px;
        margin: 0 0 48px 0;
    }
    .hero-video-section .video-control-btn {
        top: 48px;
        right: 48px;
        transform: scale(1);
    }
}
@media screen and (min-width: 1920px) {
    .hero-video-section video,
    .hero-video-section .video-container {
        height: 740px;
    }
    .hero-video-section .section-title {
        font-size: 80px;
    }
}